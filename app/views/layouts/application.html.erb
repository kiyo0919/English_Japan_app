<!DOCTYPE html>
<html>
  <head>
    <title>EnglishJapanApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'manifest', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% if user_signed_in? %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-main">
        <h1 class="m-0">
          <a class="navbar-brand d-block" href="/">EJ.com</a>
        </h1>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
               <li class="nav-item ml-4 active">
                 <%= link_to "Home", user_path(current_user), class: "nav-link text-center" %>
               </li>
               <li class="nav-item ml-4">
                 <%= link_to "About", about_path, class: "nav-link text-center" %>
               </li>
               <li class="nav-item ml-4">
                 <%= link_to "Users", users_path, class: "nav-link text-center" %>
               </li class="nav-item">
               <li class="nav-item ml-4">
                 <%= link_to "Posts", posts_path, class: "nav-link text-center" %>
               </li>
                <li class="nav-item ml-4">
                  <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link text-center" %>
                </li>
              <% else %>
              <nav class="navbar navbar-expand-lg navbar-dark bg-main">
                <h1 class="m-0">
                  <a class="navbar-brand d-block" href="/">EJ.com</a>
                </h1>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                  <ul class="navbar-nav ml-auto">
                    <li class="nav-item ml-4 active">
                     <%= link_to "Home", root_path, class: "nav-link text-center" %>
                    </li>
                    <li class="nav-item ml-4">
                     <%= link_to "About", about_path, class: "nav-link text-center" %>
                    </li>
                    <li class="nav-item ml-4">
                      <%= link_to "新規登録", new_user_registration_path, class: "nav-link text-center" %>
                    </li>
                    <li class="nav-item ml-4">
                      <%= link_to "ログイン", new_user_session_path, class: "nav-link text-center" %>
                    </li>
                  </ul>
                </div>
              </nav>
          </ul>
        </div>
         <% end %>
      </nav>
    </header>
    <% flash.each do |key, value| %>
      <%= content_tag(:p, value, class: key) %>
    <% end %>
    
    <%= yield %>
  </body>
</html>
