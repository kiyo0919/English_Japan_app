<main>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'layouts/userinfo', post: @post %>
      </div>
      <div class="col-md-8 offset-md-1">
          <% @posts.each do |post| %>
          <%= link_to post.user.name, user_path(post.user) %><br>
          <%= post.body %><br>
          <%= attachment_image_tag post, :image, :fill, 200, 150, format: 'jpeg' %><br>
          <% end %>
      </div>
    </div>
  </div>
</main>