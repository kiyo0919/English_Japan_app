<main>
  <div class="container">
    <div class="row">
      <div class="col-md-8 mx-auto mt-5">
        <div class="form">
        <%= form_with model: @post, url: post_path(@post), local:true do |f| %>
        <%= render 'layouts/error_messages', model: @post %>
          <div class="form-group">
          <h4>Body</h4>
            <%= f.text_field :body,class: "form-control" %>
          </div>
          <div class="form-group">
          <h4>Image</h4>
            <%= f.attachment_field :image %>
          </div>
          <div class="form-group">
            <%= f.submit 'Update post',class: "btn btn-success" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</main>