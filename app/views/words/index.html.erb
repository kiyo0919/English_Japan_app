<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/userinfo', post: @post, user: @user %>
    </div>
    
    <div class="col-md-8 offset-md-1 mt-5">
      <main>
        <h2>Word list</h2>
        <%= form_with url: search_words_path, method: :get, local: true do |f| %>
          <%= f.text_field :keyword %>
          <%= f.submit "Search" %>
        <% end %>
        <form class=mt-3>
          <h3>New word</h3>
          <%= form_with model: @word, local:true do |f| %>
            <div class="form-group row">
              <h5 class="col-md-2">English</h5>
              <div class="col-md-10">
                <%= f.text_field :english %>
              </div>
            </div>
            <div class="form-group row">
              <h5 class="col-md-2">Japanese</h5>
              <div class="col-md-10">
                <%= f.text_field :japanese %>
              </div>
            </div>
              <div>
              <%= f.submit 'Create', class: "btn btn-primary btn-sm"%>
              </div>
          <% end %>
        </form>
        <div class="word-list mt-5">
            <table class="table">
              <thead>
                <tr>
                  <th>English</th>
                  <th>Japanese</th>
                </tr>
              </thead>
              <tbody>
              <% @words.each do |word| %>
                <tr>
                  <td><%= word.english %></td>
                  <td><%= word.japanese %></td>
                </tr>
              </tbody>
              <% end %>
            </table>
        </div>
      </main>
    </div>
  </div>
</div>