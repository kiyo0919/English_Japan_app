<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="user-info mt-5">
        <h2>User info</h2>
        <p><%= attachment_image_tag @user, :profile_image, :fill, 90,90, format: 'jpeg', fallback: "no_image.jpg", size: '90x90', class: "user-icon" %></p>
        <table class="table">
          <tbody>
            <tr>
              <td><strong>name</strong></td>
              <td><strong><%= @user.name %></strong></td>
            </tr>
            <tr>
              <td><strong>introduction</strong></td>
              <td><strong><%= @user.introduction %></strong></td>
            </tr>
          </tbody>
        </table>
        <div class="m-2 0">
          <%= link_to following_user_path(@user) do %>
            <span><strong><%= @user.following.count %></strong> following</span>
          <% end %>
          |
          <%= link_to followers_user_path(@user) do %>
          <span><strong><%= @user.followers.count %></strong> followers</span>
          <% end %>
        </div>
          <%= link_to "", edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
        </div>
        <div class="form mt-5">
          <h2>New word</h2>
          <%= form_with model: @word, local:true do |f| %>
            <div class="form-group">
              <h5>English</h5>
              <%= f.text_field :english, class: "form-control" %>
            </div>
            <div class="form-group">
              <h5>Japanese</h5>
              <%= f.text_field :japanese, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit 'Create',class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
    </div>
    
    <div class="col-md-8 offset-md-1 mt-5">
      <main>
        <h2>Word list</h2>
        <%= form_with url: search_words_path, method: :get, local: true do |f| %>
          <%= f.text_field :keyword %>
          <%= f.submit "Search" %>
        <% end %>
        <div class="word-list mt-5">
            <table class="table">
              <thead>
                <tr>
                  <th>English</th>
                  <th>Japanese</th>
                </tr>
              </thead>
              <tbody>
              <% @words.each do |word| %>
                <tr>
                  <td><%= word.english %></td>
                  <td><%= word.japanese %></td>
                </tr>
              </tbody>
              <% end %>
            </table>
        </div>
      </main>
    </div>
  </div>
</div>