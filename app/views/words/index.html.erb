<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/userinfo', post: @post, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1 mt-5">
      <main>
        <h2>Word list</h2>
        <%= form_with url: search_words_path, method: :get, local:true do |f| %>
          <%= f.text_field :keyword %>
          <%= f.submit "Search" %>
          <% end %>
        <div class=mt-3>
          <h3>New word</h3>
          <%= form_with model: @word, local:true do |f| %>
          <%= render 'layouts/error_messages', model: @word %>
            <div class="form-group row">
              <h5 class="col-md-2">English</h5>
              <div class="col-md-10">
                <%= f.text_field :english %>
              </div>
            </div>
            <div class="form-group row">
              <h5 class="col-md-2">Japanese</h5>
              <div class="col-md-10">
                <%= f.text_field :japanese %><span><%= f.submit 'Create', class: "btn btn-primary btn-sm ml-3" %></span>
              </div>
            </div>
          <% end %>
        </div>
        <div class="word-list mt-5">
            <table class="table">
              <thead>
                <tr>
                  <th class="fixed01">English</th>
                  <th class="fixed01">Japanese</th>
                  <th class="fixed01"><button type="button" id="button1" class="btn btn-primary btn-sm">hide</button></th>
                  <th class="fixed01"><button type="button" id="button2" class="btn btn-primary btn-sm">隠す</button></th>
                </tr>
              </thead>
              <tbody>
              <% @words.each do |word| %>
                <tr>
                  <td><span class="english"><%= word.english %></span></td>
                  <td><span class="japanese"><%= word.japanese %></span></td>
                  <td><%= link_to "Delete", word_path(word), method: :delete,'data-confirm' => "Are you sure?", class: "btn btn-sm btn-outline-danger"%></td>
                </tr>
              </tbody>
              <% end %>
            </table>
        </div>
      </main>
    </div>
  </div>
</div>